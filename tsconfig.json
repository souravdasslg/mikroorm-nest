{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "paths": {
      "@app/repository-cache": [
        "libs/repository-cache/src"
      ],
      "@app/repository-cache/*": [
        "libs/repository-cache/src/*"
      ],
      "@app/common": [
        "common"
      ],
      "defaultLibraryPrefix/orm-cache": [
        "libs/orm-cache/src"
      ],
      "defaultLibraryPrefix/orm-cache/*": [
        "libs/orm-cache/src/*"
      ],
      "@app/cache-manager": [
        "libs/cache-manager/src"
      ],
      "@app/cache-manager/*": [
        "libs/cache-manager/src/*"
      ]
    }
  }
}